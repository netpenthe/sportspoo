      // track the search requests so we can abort old ones if more things typed
      $.xhrPool = []; // array of uncompleted requests
      $.xhrPool.abortAll = function() { // our abort function
          $(this).each(function(idx, jqXHR) { 
              jqXHR.abort();
          });
          $.xhrPool.length = 0
      }; 

      $("#searchterm").keyup(function(e){
        var q = $("#searchterm").val();
      
        if (q.length <= 2) {
          $("#results").empty();
          return;
        }
        $.getJSON("/search/results.json",
        {
          beforeSend: function(jqXHR) { // before jQuery send the request we will push it to our array
              $.xhrPool.abortAll();
              $.xhrPool.push(jqXHR);
          },
          complete: function(jqXHR) { // when some of the requests completed it will splice from the array
              var index = $.xhrPool.indexOf(jqXHR);
              if (index > -1) {
                  $.xhrPool.splice(index, 1);
              }
          },
          search: q,
        },
        function(data) {
          $("#results").empty();
          $("#results").append(" Results for <b>" + q + "</b><div style='float:right;cursor: hand; cursor: pointer;' onclick=\"$('#results_wrapper').hide()\">[x]</div>");

          $.each(jQuery.parseJSON(data['events']), function(i,item){
            //$("#results").append("<div><label for='CB_T"+item.id+"'> ["+ item.sport + "] "+item.name+"<div style='float:right'><input type='checkbox' id='CB_L"+item.id+"' onclick='mySportsUI.add_league("+item.id+",\""+item.sport+"\",\""+item.name+"\");mySportsUI.getEvents(this,"+item.id+")'> </div> ");
            var nd = mySportsUI.convertTZ2(+new Date(item.start_date),"10.5");
            
            if (item.teams.length == 2) {
              $('#results').append("<div class='search_result_div'>"+item.sport+"&nbsp;&nbsp;<label for='CB_T"+item.teams[0].id+"' class='label search_team'>"+item.teams[0].name+'<input onclick="mySportsUI.addMyTeam(\''+item.teams[0].name+'\','+item.teams[0].id+')" type="checkbox" id="CB_T'+item.teams[0].id+'"></label> vs <label for="'+item.teams[1].id+'" class="label search_team2">'+item.teams[1].name+'<input type="checkbox"  onclick="mySportsUI.addMyTeam(\''+item.teams[1].name+'\','+item.teams[1].id+')" id="CB_T'+item.teams[1].id+'"></label>- '+nd+'<span  class="label" style="float:right;background-color:'+ item.league_label_colour+'; font-size:10px;" data-name="activesupport">'+item.league_name+"<input type='checkbox' id='CB_L"+item.id+"' onclick='mySportsUI.add_league("+item.league_id+",\""+item.sport+"\",\""+item.league_name+"\");mySportsUI.getEvents(this,"+item.league_id+")'> </span>");
            } else {
              $('#results').append('<div>'+item.display_name+'<span class="label" style="background-color:'+ item.league_label_colour+'; font-size:10px;" data-name="activesupport">'+item.league_name+'</span>');
            }
      
          });

          $.each(jQuery.parseJSON(data['leagues']), function(i,item){
            $("#results").append("<div class='search_result_div'><label for='CB_T"+item.id+" class='label search_league''> ["+ item.sport + "] <span style='float:right;background-color:"+ item.label_colour+"; font-size:10px;' data-name='activesupport' class='label search_league'>"+item.name+"<input type='checkbox' id='CB_L"+item.id+"' onclick='mySportsUI.add_league("+item.id+",\""+item.sport+"\",\""+item.name+"\");mySportsUI.getEvents(this,"+item.id+")'> </span></div> ");
          });
 
          $.each(jQuery.parseJSON(data['teams']), function(i,item){
            $("#results").append("<div class='search_result_div'> ["+ item.sport_name + "] <label for='CB_T"+item.id+"' class='label search_team'>"+item.name+"<input type='checkbox' id='CB_T"+item.id+"' onclick='mySportsUI.addMyTeam(\""+item.name+"\","+item.id+")'></label></div> ");
          });
          $('#results_wrapper').show();
          $('#results').css('padding', '10px');
        });
 
