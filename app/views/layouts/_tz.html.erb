<script>
  var TZ_MAPPING = <%=raw ActiveSupport::TimeZone::MAPPING.to_json%>;
  var REV_TZ_MAPPING = {};
  for (one in TZ_MAPPING) {
    if (TZ_MAPPING.hasOwnProperty(one)) {
      REV_TZ_MAPPING[TZ_MAPPING[one]] = one;
    }
  }
</script>
