<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= content_for?(:title) ? yield(:title) : "Sport-o-mate" %></title>
    <meta name="description" content="When does my team play? Sporting event times in your local timezone">
    <meta name="author" content="">

    <%= stylesheet_link_tag "application", :media => "all" %>

    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
    <script src="https://cdn.firebase.com/v0/firebase.js"></script>

    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>

    <%= yield(:head) %>

  </head>

  <body style='padding:0px'>
 
    <div id="main" role="main">
      <div class="" style='height:100px;'>

        <div id='main_title'><%=image_tag('logo.gif',:width=>'360',:style=>'width:360px')%></div>

        <div style='padding-left:10px; padding-top:6px; clear:both;'>
          <p>
            <%=link_to "list", "/u/#{@user.username}.mobile",:format=>:mobile%> | <%=link_to "chat", "/u/#{@user.username}/chat.mobile"%> 
            | current time: <%=Time.now.strftime("%a %l:%M %P").downcase%>
          </p>
        </div>

        <div class=''>
           <div class="">
            <div class="" style="left-padding:5px;">
              <%#= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
          <footer>
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->

  </body>

</html>
